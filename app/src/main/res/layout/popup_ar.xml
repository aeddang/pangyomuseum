<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent"
    android:background="@color/transparent_black80">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_black"
                android:layout_margin="30dp"
                android:scaleType="fitXY"/>
            <com.enoughmedia.pangyomuseum.component.SceneViewBox
                android:id="@+id/sceneViewBox"
                android:layout_margin="34dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_weight="1">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_regular"
                android:layout_marginRight="55dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_heavy"/>
                <TextView
                    android:id="@+id/title"
                    style="@style/font_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_extra_bold" />
                <TextView
                    android:id="@+id/info"
                    style="@style/font_regular"
                    android:layout_marginTop="@dimen/margin_light"
                    android:padding="@dimen/margin_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title\nasdsdsd\nsadsd"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_regular"
                    android:background="@drawable/shape_info_bg"/>
                <TextView
                    android:id="@+id/desc"
                    style="@style/font_regular"
                    android:layout_marginTop="@dimen/margin_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_regular" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_medium"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <include
        android:id="@+id/btnClose"
        layout="@layout/btn_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/margin_regular"
        android:layout_marginRight="@dimen/margin_regular" />
    <ImageView
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="@dimen/margin_regular"
        android:layout_marginLeft="@dimen/margin_regular"
        android:src="@drawable/icon_360"/>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_blue"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="@dimen/margin_regular"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_marker" />

        <TextView
            android:id="@+id/text"
            style="@style/font_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginRight="@dimen/margin_regular"
            android:layout_marginBottom="@dimen/margin_regular"
            android:layout_weight="1"
            android:text="dsadsdsdsdzdvdsvdvdsvdsvdvdvdvdvdvdevdvdvdvdvdvdvdcvfdsvdvdvdvdsvdsvdvdvdvdvdv"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_bold" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|left"
            android:layout_marginRight="@dimen/margin_regular"
            android:layout_marginBottom="@dimen/margin_regular"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_close_small" />
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top|center_horizontal">
        <TextView
            style="@style/font_light"
            android:layout_gravity="left|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup_guide_step"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/colorYellowLight"
            />
        <TextView
            android:id="@+id/num"
            style="@style/font_bold"
            android:layout_marginLeft="@dimen/margin_thin"
            android:layout_gravity="left|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="@dimen/font_heavy"
            android:textColor="@color/colorYellowLight"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="@dimen/margin_thin"
        android:layout_width="176dp"
        android:layout_height="160dp"
        android:src="@drawable/icon_step0"
        />
    <TextView
        android:id="@+id/text"
        style="@style/font_regular"
        android:layout_marginTop="@dimen/margin_extra_thin"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popup_guide_text1"
        android:textAlignment="center"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/colorYellowExtraLight"
        />
</LinearLayout>
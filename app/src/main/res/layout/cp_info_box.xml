<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/icon"
                android:layout_width="39dp"
                android:layout_height="23dp"
                android:layout_gravity="left|center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_brick" />

            <com.skeleton.view.textview.OutlineTextView
                android:id="@+id/title"
                style="@style/font_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="@dimen/margin_light"
                android:text="dsadsdsdsd"
                android:textColor="@color/colorBrownDeep"
                android:textSize="@dimen/font_extra_bold"
                app:textStroke="true"
                app:textStrokeColor="@color/transparent_white45"
                app:textStrokeWidth="2dp"/>
        </LinearLayout>
        <com.skeleton.view.textview.OutlineTextView
            android:id="@+id/desc"
            style="@style/font_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/transparent_black30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="160dp"
            android:paddingTop="@dimen/margin_light"
            android:paddingBottom="@dimen/margin_light"
            android:text="dsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsddsadsdsdsd"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_bold"
            app:textStroke="true"
            app:textStrokeColor="@color/colorBlack"
            app:textStrokeWidth="1dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnOpen"
        android:layout_width="52dp"
        android:layout_height="43dp"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/transparent"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_down" />
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.enoughmedia.pangyomuseum.page.ItemAntiquity
                android:id="@+id/antiquity0"
                android:layout_width="176dp"
                android:layout_height="160dp"/>

            <com.enoughmedia.pangyomuseum.page.ItemAntiquity
                android:id="@+id/antiquity1"
                android:layout_width="176dp"
                android:layout_height="160dp"
                android:layout_marginLeft="@dimen/margin_thin"
                 />

            <com.enoughmedia.pangyomuseum.page.ItemAntiquity
                android:id="@+id/antiquity2"
                android:layout_width="176dp"
                android:layout_height="160dp"
                android:layout_marginLeft="@dimen/margin_thin"
                />

            <com.enoughmedia.pangyomuseum.page.ItemAntiquity
                android:id="@+id/antiquity3"
                android:layout_width="176dp"
                android:layout_height="160dp"
                android:layout_marginLeft="@dimen/margin_thin"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_thin">

            <com.enoughmedia.pangyomuseum.page.ItemAntiquity
                android:id="@+id/antiquity4"
                android:layout_width="176dp"
                android:layout_height="160dp"
                />

            <com.enoughmedia.pangyomuseum.page.ItemAntiquity
                android:id="@+id/antiquity5"
                android:layout_width="176dp"
                android:layout_height="160dp"
                android:layout_marginLeft="@dimen/margin_thin"
                 />

            <com.enoughmedia.pangyomuseum.page.ItemAntiquity
                android:id="@+id/antiquity6"
                android:layout_width="176dp"
                android:layout_height="160dp"
                android:layout_marginLeft="@dimen/margin_thin"
                 />

            <com.enoughmedia.pangyomuseum.page.ItemAntiquity
                android:id="@+id/antiquity7"
                android:layout_width="176dp"
                android:layout_height="160dp"
                android:layout_marginLeft="@dimen/margin_thin"
                />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>